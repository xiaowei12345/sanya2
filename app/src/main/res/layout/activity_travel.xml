<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:onClick="click"
                        android:background="@drawable/selector_btn_back"
                        />
        </LinearLayout>
        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical"
                                      android:layout_centerVertical="true"
                                      android:id="@+id/linearLayout">
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                          android:id="@+id/tv_travelInfo_title"

                                          android:textSize="25dp"
                                          android:text="浮生半日闲"

                                          android:ellipsize="end"/>
                                <TextView android:id="@+id/tv_travelInfo_time"
                                          android:layout_marginBottom="10dp"
                                          android:layout_marginTop="10dp"
                                          android:layout_width="match_parent" android:layout_height="wrap_content"
                                          android:textSize="12dp"
                                          android:text="2013.3.8"

                                          android:ellipsize="end"/>
                                <TextView android:id="@+id/tv_travelInfo_author"
                                          android:layout_width="match_parent" android:layout_height="wrap_content"
                                          android:textSize="12dp"
                                          android:text="作者"
                                          android:ellipsize="end"/>
                        </LinearLayout>
                        <TextView android:layout_width="match_parent" android:layout_height="1dp"
                                  android:layout_marginBottom="10dp"
                                  android:layout_marginTop="10dp"
                                android:background="#a6a4a4"/>
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="前序"
                                          android:id="@+id/tv_travelInfo_prewords"/>
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                          android:text="hhhhhhhhhhhhhhhhhh"/>
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                                           android:id="@+id/iv_travelInfo_photo1"
                                           android:src="@mipmap/travel1"/>
                                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                                          android:id="@+id/tv_travelInfo_contents"
                                          android:text="hhhhhhhhhhhhhhhhhh"/>
                                <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                                           android:id="@+id/iv_travelInfo_photo2"
                                           android:src="@mipmap/travel2"/>
                                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:text="查看详情"
                                        android:onClick="click"
                                        android:layout_gravity="center"
                                        android:id="@+id/btn_travelInfo"
                                        android:gravity="center"/>

                        </LinearLayout>


                </LinearLayout>
        </ScrollView>

</LinearLayout>
